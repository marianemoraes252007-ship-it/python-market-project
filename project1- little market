import time

print("Welcome to Python's Supermarket!!!")
print("Here are the available products!")

total = 0
cart = []

pen = 2.90
cake = 15.00
meat = 35.90
pizza = 21.99
candy = 5.50

# Product selection

product1 = input("Do you want a Pen - $2.90? ").strip().upper()
if product1 == "YES":
    total += pen
    cart.append("Pen")
    print("Product successfully added!")

product2 = input("Do you want a Cake - $15.00? ").strip().upper()
if product2 == "YES":
    total += cake
    cart.append("Cake")
    print("Product successfully added!")

product3 = input("Do you want Meat - $35.90? ").strip().upper()
if product3 == "YES":
    total += meat
    cart.append("Meat")
    print("Product successfully added!")

product4 = input("Do you want Pizza - $21.99? ").strip().upper()
if product4 == "YES":
    total += pizza
    cart.append("Pizza")
    print("Product successfully added!")

product5 = input("Do you want Candy - $5.50? ").strip().upper()
if product5 == "YES":
    total += candy
    cart.append("Candy")
    print("Product successfully added!")

# Purchase summary

print("\n========== PURCHASE SUMMARY ==========")

if len(cart) == 0:
    print("No products were selected.")
else:
    for item in cart:
        print("-", item)

print(f"Subtotal: ${total:.2f}")

# Payment

print("\nPayment methods:")
print("(1) Cash or check -> 10% DISCOUNT")
print("(2) Credit/Debit card (full payment) -> 5% DISCOUNT")
print("(3) 2 installments on card -> NO DISCOUNT")
print("(4) 3 or more installments on card -> 20% INTEREST")

paymentMethod = input("Choose the payment method: ").strip()

while not paymentMethod.isnumeric() or int(paymentMethod) not in [1, 2, 3, 4]:
    print("Please choose a valid option (1 to 4).")
    paymentMethod = input("Choose the payment method: ").strip()

paymentMethod = int(paymentMethod)

if paymentMethod == 1:
    finalTotal = total * 0.90
    print(f"Final amount with discount: ${finalTotal:.2f}")

elif paymentMethod == 2:
    finalTotal = total * 0.95
    print(f"Final amount with discount: ${finalTotal:.2f}")

elif paymentMethod == 3:
    finalTotal = total
    installment = finalTotal / 2
    print(f"It will be 2 installments of ${installment:.2f}")

elif paymentMethod == 4:
    installments = int(input("Number of installments: "))
    finalTotal = total * 1.20
    installmentValue = finalTotal / installments
    print(f"It will be {installments} installments of ${installmentValue:.2f}")

# Processing

print("\nProcessing payment...")
time.sleep(3)

print("Payment completed successfully!!!")
print("Thank you for your preference!!!")
print("Come back soon!!!")
